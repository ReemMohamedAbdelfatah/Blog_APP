<div class="user">
    <div class="photo"> <%= @user.photo %> </div>
    <div class="detail">
        <h1>  <%=  @user.name %></h1>
        <small>Number of posts: <%= @user.Posts_Counter%>  </small>
    </div>
</div>
<br>

<% @posts.each_with_index do |post, index|%>
    <div class="posts">
        <small>Post  <%= index+1 %> </small>
            <p> <%= post.title %> </p>
            <div class ="reactions"> 
                <span>Comments: <%= post.comments_counter%> </span>
                <span>Likes: <%= post.likes_counter%> </span>
            </div>
    </div>

    <div class="comments">
        <% post.recent_comments.each_with_index do |comment, index|%>
            <p>Comment <%=index+1%>: <%= comment.author.name%>,  <%= comment.text%> </p>
        <% end %>
    </div>
<% end %>
